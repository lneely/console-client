pkgname=pcloudcc
pkgver=20240615
pkgrel=1
epoch=0
pkgdesc="pcloudcc is a simple linux console client for pCloud cloud storage."
arch=('x86_64')
url="https://github.com/pcloudcom/console-client"
license=(BSD-3-Clause)
makedepends=(cmake)
depends=(zlib boost fuse2)

source=("$pkgname-$pkgver.tar.gz::https://codeload.github.com/lneely/console-client/tar.gz/refs/tags/$pkgver")
sha256sums=('52969a71bad79cd5946fc3c656abbe5238affda8c9c627d790f2049ff47a2fec')



build() {
    cd "console-client-$pkgver"
    make
}

package() {
    cd "console-client-$pkgver/pCloudCC"
    make DESTDIR="$pkgdir/" install
}


